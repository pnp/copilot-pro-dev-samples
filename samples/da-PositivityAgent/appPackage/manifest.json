{
    "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.19/MicrosoftTeams.schema.json",
    "manifestVersion": "1.19",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "developer": {
        "name": "Teams App, Inc.",
        "websiteUrl": "https://www.pkbullock.com",
        "privacyUrl": "https://www.pkbullock.com/privacy",
        "termsOfUseUrl": "https://www.pkbullock.com/termofuse"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Positivity Agent ${{APP_NAME_SUFFIX}}",
        "full": "Positivity Agent"
    },
    "description": {
        "short": "An agent designed to premote positivity",
        "full": "An agent designed to premote positivity, motivation, and confidence-building support to users."
    },
    "accentColor": "#FFFFFF",
    "composeExtensions": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "copilotAgents": {
        "declarativeAgents": [            
            {
                "id": "declarativeAgent",
                "file": "declarativeAgent.json"
            }
        ]
    },
    "validDomains": []
}